<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:elevation="2dp"
        android:layout_marginLeft="50dp">
        
        <ImageView
            android:id="@+id/template_bucket_img_crown"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/crown"
            />
        <TextView
            android:layout_toRightOf="@id/template_bucket_img_crown"
            android:id="@+id/template_bucket_txt_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7월 버킷 PICK 1위"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/template_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="#000000"
        android:text="유럽여행 꼭 가고싶습니다."
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="0dp"
        />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        >
        <RelativeLayout
            android:id="@+id/template_result_pic_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp">



            <RelativeLayout
                android:id="@+id/template_pic_layout1"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:id="@+id/template_pic_result1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80d8d8d8"/>

                <TextView
                    android:id="@+id/template_pic_result_desc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#9c9c9c"
                    android:gravity="center"
                    android:text="08.21\nSTAGE2"
                    android:textSize="24dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/template_pic_layout2"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/template_pic_layout1">
                <ImageView
                    android:id="@+id/template_pic_result2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80d8d8d8"/>

                <TextView
                    android:id="@+id/template_pic_result_desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#9c9c9c"
                    android:gravity="center"
                    android:text="08.21\nSTAGE2"
                    android:textSize="24dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/template_pic_layout3"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/template_pic_layout2">
                <ImageView
                    android:id="@+id/template_pic_result3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80d8d8d8"/>

                <TextView
                    android:id="@+id/template_pic_result_desc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#9c9c9c"
                    android:gravity="center"
                    android:text="08.21\nSTAGE2"
                    android:textSize="24dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/template_pic_layout4"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/template_pic_layout3">
                <ImageView
                    android:id="@+id/template_pic_result4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80d8d8d8"/>

                <TextView
                    android:id="@+id/template_pic_result_desc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#9c9c9c"
                    android:gravity="center"
                    android:text="08.21\nSTAGE2"
                    android:textSize="24dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/template_pic_layout5"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/template_pic_layout4">
                <ImageView
                    android:id="@+id/template_pic_result5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80d8d8d8"/>

                <TextView
                    android:id="@+id/template_pic_result_desc5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#9c9c9c"
                    android:gravity="center"
                    android:text="08.21\nSTAGE2"
                    android:textSize="24dp"
                    />
            </RelativeLayout>

        </RelativeLayout>

</HorizontalScrollView>
</LinearLayout>
