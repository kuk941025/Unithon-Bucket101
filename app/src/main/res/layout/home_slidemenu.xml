<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_gravity="start"
    android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/sidemenu"/>
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="match_parent"

    android:gravity="center|top"
    >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="45dp"
            android:src="#939393"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/slide_menu_text_name"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제이슨"
                    android:textSize="20dp"
                    android:textColor="#ffffff"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/seticon"

                    android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="190dp"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff"/>



        <TextView
            android:id="@+id/slide_menu_home"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginTop="50dp"
            android:text="홈"
            android:textSize="24dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#ffffff"
            android:background="?android:attr/selectableItemBackground"
            />
        <TextView
            android:id="@+id/slide_menu_progress_bucket"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginTop="20dp"
            android:text="진행중 버켓"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            />
        <TextView
            android:id="@+id/slide_menu_like_bucket"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:text="좋아요 버켓"
            android:textSize="24dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            />
        <TextView
            android:id="@+id/slide_menu_personal_bucket"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:text="내가 쓴 버켓"
            android:textSize="24dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            />
    </LinearLayout>
</RelativeLayout>
